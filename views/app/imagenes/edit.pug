extends ../../layout.pug
block contenido
	div(class="col-md-5 remove-float center-block big-top-space")
		h1(class="text-center") Editar Imagen
		form(action="/app/imagenes/"+imagen.id+"?_method=PUT" method="POST" class="top-space")
			div(class="form-group")
				label(for="email") Título
				input(type="text" name="title" placeholder="Título de la imagen..." id="title" class="form-control" value=imagen.title)
			div(class="row top-space")
				div(class="col-xs-12 col-sm-6")
					input(type="submit" class="btn btn-info" value="Guardar")
