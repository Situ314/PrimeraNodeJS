extends ../../layout.pug
block contenido
	div(class="col-md-5 remove-float center-block big-top-space")
		h1(class="text-center") Imagen
		form(action="/app/imagenes" method="POST" class="top-space" enctype="multipart/form-data")
			div(class="form-group")
				label(for="email") Título
				input(type="text" name="title" placeholder="Título de la imagen..." id="title" class="form-control")
			div(class="form-group")
				label(for="password") Imagen
				input(type="file" name="archivo" id="archivo" class="form-control")
			div(class="row top-space")
				div(class="col-xs-12 col-sm-6")
					input(type="submit" class="btn btn-info" value="Subir Imagen")
				